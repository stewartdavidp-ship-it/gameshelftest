  "shortcuts": [
    {
      "name": "Log Game",
      "short_name": "Log",
      "description": "Quickly log today's game results",
      "url": "/?action=log&source=shortcut",
      "icons": [{ "src": "icons/shortcut-log.png", "sizes": "96x96" }]
    },
    {
      "name": "My Battles",
      "short_name": "Battles",
      "description": "View active battles and tournaments",
      "url": "/?tab=social&view=battles&source=shortcut",
      "icons": [{ "src": "icons/shortcut-battle.png", "sizes": "96x96" }]
    },
    {
      "name": "Friends",
      "short_name": "Friends",
      "description": "See what friends played today",
      "url": "/?tab=social&view=friends&source=shortcut",
      "icons": [{ "src": "icons/shortcut-friends.png", "sizes": "96x96" }]
    }
  ],
  
  "share_target": {
    "action": "/?share-target=true",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "screenshots": [
    {
      "src": "screenshots/home.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Home screen with today's progress"
    },
    {
      "src": "screenshots/battles.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Battle with friends"
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+gameshelf",
      "url": "/?protocol=%s"
    }
  ],
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  }
}
