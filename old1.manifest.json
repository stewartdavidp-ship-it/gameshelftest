{
  "name": "Game Shelf - Daily Puzzle Tracker",
  "short_name": "Game Shelf",
  "description": "Track your daily puzzle games, build streaks, compete with friends, and never miss a Wordle again!",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui"],
  "background_color": "#0a0a0f",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["games", "entertainment", "lifestyle"],
  "iarc_rating_id": "",
  
